{
  "manifest_version": 3,
  "name": "Currency Converter",
  "description": "Select any currency amount on a webpage and convert it to your preferred currency via right-click. Rates from the European Central Bank.",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "alarms",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.ecb.europa.eu/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/shared/constants.js",
        "src/content/currency-detector.js",
        "src/content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  }
}
